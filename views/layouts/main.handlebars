<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>quizzMe - @codeX</title>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/qwest.min.js" charset="utf-8"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript">
        if(document.addEventListener)
            document.addEventListener("visibilitychange", function(){
                //alert('visibilitychange!')
            });

    </script>

</head>

<body>
    <nav class="navbar navbar-default">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Quiz-Me</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    {{# if username}}
                        {{# if isAdmin}}
                            <li {{#if coursePath }} class="active" {{/if}}><a href="/courses">Courses </a></li>
                            <li {{#if userPath }} class="active" {{/if}}><a href="/users">Users</a></li>
                            <li {{#if groupPath }} class="active" {{/if}}><a href="/groups">Groups</a></li>
                        {{/if}}
                        <li {{#if quizPath }} class="active" {{/if}}><a href="/profile">Quizzes</a></li>
                    {{/if}}
                </ul>
            </div>

        </nav>
<div class="container">
    <div class="row">
        {{#if messages.messages}}
            <div class="alert alert-danger">
                    <ul>
                        {{#each messages.messages}}
                            <li>{{this.msg}}</li>
                        {{/each}}
                    </ul>
            </div>
        {{/if}}
    </div>
    {{#if messages.success_message}}

        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            {{messages.success_message}}
        </div>

    {{/if}}
    {{{body}}}
</div>
    <!-- /.container-fluid -->


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>

    <script src="/js/menu.js" charset="utf-8"></script>

</body>

</html>
