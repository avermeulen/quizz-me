<div class="row">
    <div class="col-md-8">

        <h1>Update user</h1>
        <form action="/user/update/{{_id}}" method="POST">
            <div>
                <a target="_blank" href="http://bootcamp.projectcodex.co/selfies/{{githubUsername}}.png"><img style="height:100px;" src="http://bootcamp.projectcodex.co/selfies/{{githubUsername}}.png" alt=""></a>
            </div>
            <div class="form-group {{#if messages.errorFields.[0].firstName }} has-error {{/if}}">
                <label for="firstName">First name</label>
                <input type="text" class="form-control" id="firstName" placeholder="First name" name="firstName" value="{{firstName}}">
            </div>
            <div class="form-group {{#if messages.errorFields.[0].lastName }} has-error {{/if}}">
                <label for="lastName">Last name</label>
                <input type="text" class="form-control" id="lastName" placeholder="Last name" name="lastName" value="{{lastName}}">
            </div>
            <div class="form-group {{#if messages.errorFields.[0].email }} has-error {{/if}}">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Email" name="email" value="{{email}}">
            </div>
            <div class="form-group {{#if messages.errorFields.[0].githubUsername }} has-error {{/if}}">
                <label for="githubUsername">Github username</label>
                <input type="text" class="form-control" id="githubUsername" placeholder="Github username" name="githubUsername" value="{{githubUsername}}">
            </div>

            <div class="checkbox">
              <label>
                <input type="checkbox" name="active" {{#if isActive}} checked {{/if}} value="true"  > Active
              </label>
            </div>

            <div class="form-group {{#if messages.errorFields.[0].role }} has-error {{/if}}">
                <label for="role">User role</label>
                <div class="radio {{#if messages.errorFields.[0].role }} has-error {{/if}}">
                    <label>
                        <input type="radio" id="role" name="role" value="admin" {{#if admin}} checked {{/if}}  >
                        Admin
                    </label>
                </div>
                <div class="radio {{#if messages.errorFields.[0].role }} has-error {{/if}}">
                    <label>
                        <input type="radio" id="role" name="role" value="candidate" {{#if candidate}} checked {{/if}}>
                        Candidate
                    </label>
                </div>
            </div>

            <button class="btn btn-success">Update user</button>
        </form>
    </div>
    <style media="screen">
        error-messages {

        }
    </style>
</div>
