<div class="row">
	
	<div class="col-md-8">
		<h1>Quiz 101</h1>
		<form  action="/answer/{{question.id}}" method="POST" >
			<h2>{{question.text}}</h2>
			{{#each question.answers}}
			<div class="radio">
			  <label>
			    <input type="radio" name="answer" value="{{this}}">
			    	{{this}}
			  </label>
			</div>
			{{/each}}
			
			<button class="btn btn-success">Answer</button>
		</form>
	</div>
  	<div class="col-md-4">
		<h2>Progress</h2>
			  
	</div>
	
</div>