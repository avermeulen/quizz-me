<h1>Add option</h1>

<form class="" action="/course/{{course_id}}/question/{{question_id}}/option/add" method="post">
    <div class="form-group">
        <label for="option">Option text</label>
        <input class="form-control" type="text" name="option" value="">
    </div>
    <div class="form-group">
        <label for="isAnswer">Is correct</label>
        <input class="form-control" type="checkbox" name="isAnswer" value="true">
    </div>

    <input class="btn btn-success" type="submit" name="name" >
</form>
