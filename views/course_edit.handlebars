
<div class="row">
	<div class="col-md-8">
        <h1>Edit course</h1>
		<form  action="/course/update/{{_id}}" method="POST" >

            <div class="form-group {{#if messages.errorFields.[0].name }} has-error {{/if}}">
                <label for="name">Course name</label>
                <input class="form-control" type="text" name="name" value="{{name}}" placeholder="Course name" value={{messages.fields.[0].name}}>
            </div>

            <div class="form-group {{#if messages.errorFields.[0].description }} has-error {{/if}}">
                <label for="description">Course description</label>
                <input class="form-control" type="text" name="description" value="{{description}}" placeholder="Course description" value={{messages.fields.[0].description}}>
            </div>

			<button class="btn btn-success">Submit</button>
		</form>
	</div>

</div>
