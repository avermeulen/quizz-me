
<div class="row">
    <div class="col-md-12">

        <h1>Edit user group</h1>
        <form action="/groups/add" method="POST">
            <div class="form-group {{#if messages.errorFields.[0].firstName }} has-error {{/if}}">
                <label for="name">Group name</label>
                {{userGroup.name}}
            </div>

            <h2>Users</h2>
            <table class="table">
                {{#users}}
                <tr>
                    <td>
                        <input type="checkbox" name="userId" value="{{_id}}">
                    </td>
                    <td>
                        {{firstName}}
                    </td>
                    <td>
                        {{lastName}}
                    </td>
                </tr>
                {{/users}}
            </table>

        </form>

        <h2>Quizzes</h2>
        <table class="table">
            {{#quizzes}}
                <tr>
                    <td>
                        {{_user.firstName}}
                    </td>
                    <td>
                        {{_user.lastName}}
                    </td>
                    <td>
                        {{details.name}}
                    </td>
                    <td>
                        {{status}}
                    </td>
                    <td>
                        {{#if score}}
                        {{score}}%
                        {{/if}}
                    </td>
                    <td>
                        {{#if active}}
                            <a class="btn btn-success" href="/quiz/{{_id}}/answer/0" >Start</a>
                        {{else}}
                            <a class="btn btn-success" href="/quiz/{{_id}}/results" >Results</a>
                        {{/if}}
                    </td>
                </tr>
            {{/quizzes}}
        </table>
    </div>
    <style media="screen">
        error-messages {

        }
    </style>
</div>
