
<div class="row">
	<div class="col-md-8">
        <h1>Add course</h1>
		<form  action="/course/add" method="POST" >

            <div class="form-group {{#if messages.errorFields.[0].name }} has-error {{/if}}">
                <label for="name">Course name</label>
                <input class="form-control" type="text" name="name"
					placeholder="Course name" value="{{messages.fields.[0].name}}">
            </div>

            <div class="form-group {{#if messages.errorFields.[0].description }} has-error {{/if}}">
                <label for="description">Course description</label>
                <input class="form-control" type="text" name="description"
					placeholder="Course description" value="{{messages.fields.[0].description}}">
            </div>

			<button class="btn btn-success">Add</button>
		</form>
	</div>

</div>
