<div class="row">

    <div class="col-sm-6">
        <h1>Add hunch</h1>
        <form class="" action="/hunches/add" method="post">
            <input type="hidden" name="usergroup_id" value="{{usergroup_id}}" >
            <input type="hidden" name="username" value="{{username}}">
            <input type="hidden" name="mentor_username" value="{{mentor_username}}">

            <div class="form-group">
                <label for="">Hunch for</label>
                <input class="form-control" type="text" name="name" readonly="true" value="{{user.firstName}} {{user.lastName}}">
            </div>

            <div class="form-group">
                <label for="hunch">Hunch</label>
                <textarea class="form-control" name="description" rows="8" cols="40">{{data.description}}</textarea>
            </div>
            <div class="form-group">

                <label class="radio-inline">
                    <input type="radio" name="rating" id="inlineRadio1" value="1"> Red
                </label>
                <label class="radio-inline">
                    <input type="radio" name="rating" id="inlineRadio2" value="2"> Amber
                </label>
                <label class="radio-inline">
                    <input type="radio" name="rating" id="inlineRadio3" value="3"> Green
                </label>
            </div>
            <div class="form-group">
                <input class="btn" type="submit" name="name" value="Add hunch">
            </div>
        </form>
    </div>

</div>
