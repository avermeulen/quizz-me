<div class="row">

<h1>Question</h1>

{{question.question}}

</div>

<div class="row">
    <h1>Options</h1>

    <a class="btn btn-primary" href="/course/{{course_id}}/question/{{question.id}}/option/add">Add option</a>

    <table class="table">
        <tr>
            <th>
                Option
            </th>
            <th>
                Correct answer
            </th>
        </tr>
        {{#question.options}}
            <tr>
                <td>
                    {{answerOption}}
                </td>
                <td>
                    {{isAnswer}}
                </td>
            </tr>
        {{/question.options}}
    </table>
</div>
