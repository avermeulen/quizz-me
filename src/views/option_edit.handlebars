<h1>Edit option</h1>

<form class="" action="/course/{{course_id}}/question/{{question_id}}/option/{{option._id}}/update" method="post">
    <div class="form-group">
        <label for="option">Option text</label>
        <textarea name="option" class="form-control" rows="8" cols="40">{{option.answerOption}}</textarea>
    </div>
    <div class="form-group">
        <label for="isAnswer">Is correct</label>
        <input class="form-control" type="checkbox"
            name="isAnswer" value="true" {{#if option.isAnswer}}checked{{/if}}>
    </div>

    <input class="btn btn-success" type="submit" name="name" >
</form>
