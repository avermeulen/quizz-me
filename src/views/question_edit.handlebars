<h1>Add question</h1>

<form class="" action="/course/{{course_id}}/question/{{question._id}}/update" method="post">
    <div class="form-group {{#if messages.errorFields.[0].question }}has-error{{/if}}">
        <label for="question">Question</label>

        <textarea name="question" class="form-control" rows="4" cols="40">{{question.question}}</textarea>

    </div>
    <div class="form-group">
        <label for="type">Question type</label>
        <label class="radio-inline">
            <input type="radio" name="questionType" value="mcq" {{#if mcq}}checked{{/if}}> Multiple choice
        </label>
        <label class="radio-inline">
            <input type="radio" name="questionType" value="freetext" {{#unless mcq}}checked{{/unless}} > Free text
        </label>
    </div>

    <input class="btn btn-success" type="submit" name="name" value="Update">
</form>
